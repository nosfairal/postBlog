                        </div>
                        <!--Grid column-->

                        <!--Grid column-->
                        <div class="col-lg-3 col-md-6 mb-4 mb-md-0">
                        <h5 class="text-uppercase">Mentions légales</h5>

                        </div>
                        <!--Grid column-->
                    </div>
                    <!--Grid row-->
                    </section>
                    <!-- Section: Links -->
                </div>
                <!-- Grid container -->

                <!-- Copyright -->
                <div class="text-center p-3" style="background-color: rgba(0, 0, 0, 0.2);">
                    © 2022 Copyright:
                    <a class="text-white" href="#">Nosfair</a>
                </div>
                <!-- Copyright -->
            </footer>
            <!-- Footer -->
        {% endblock %}
    
        {% block script %}
           <script src="./vendor/components/jquery/jquery.min.js"></script>
           <script src="./vendor/twbs/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
           <script src="./public/javascript/alert.js"></script>
           <script src="./public/javascript/close.js"></script>
        {% endblock %}
    {% endblock %}
