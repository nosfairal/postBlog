<!DOCTYPE html>
<html lang="fr">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <meta name= "description" content= "BlogPost de présentation des travaux de François Thialon" />
        <title>{% block title %}BlogPost François Thialon{% endblock %}</title>
        {% block stylesheets %}
            <link rel="stylesheet" href="./vendor/twbs/bootstrap/dist/css/bootstrap.min.css"/>
            <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.2/font/bootstrap-icons.css">
        {% endblock %}

    </head>

    <body class="">
    {% block body %}
        <header class="h6">
            <nav class="navbar navbar-expand-lg navbar-dark bg-personnal">
                <a class="navbar-brand" href="#">
                    <img src="./public/images/francoisT.jpg" width="100px" high="100px" class="rounded-3" alt="Photo François Thialon">
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav justify-content-between mr-auto">
                        <li class="nav-item">
                            <a class="nav-link {% if currentPage == "home" %} active {% endif %}" href="./index.php">ACCUEIL <span class="sr-only"></span></a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link {% if currentPage == "register" %} active {% endif %}" href="./index.php?p=user/register">S'inscrire</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link {% if currentPage == "postIndex" %} active {% endif %}" href="./index.php?p=post/index">Tous les posts</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link {% if currentPage == "contact" %} active {% endif %}" href="./index.php?p=contact/index">Me contacter</a>
                        </li>
                        {% if session.user.userRole == "admin" or session.user.userRole == "moderator" %}
                            <li class="nav-item">
                                <a class="nav-link {% if currentPage == "admin" %} active {% endif %}" href="./index.php?p=admin/index">Administration du site</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link {% if currentPage == "adminPosts" %} active {% endif %}" href="./index.php?p=admin/posts">Gérer les posts</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link {% if currentPage == "adminComments" %} active {% endif %}" href="./index.php?p=admin/comments">Gérer les commentaires</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link {% if currentPage == "adminUsers" %} active {% endif %}" href="./index.php?p=admin/users">Gérer les utilisateurs</a>
                            </li>
                        {% endif %}
                        {% if session.user %} {% else %}
                            <li class="nav-item">
                                <a class="nav-link" href="./index.php?p=user/login">Se connecter</a>
                            </li>
                        {% endif %}
                        <li class="nav-item">
                            <a class="nav-link" href="./public/images/cvFT.pdf" target="_blank">Télécharger mon CV</a>
                        </li>
                    </ul>
                    {% if session.user %}
                        <ul class="navbar-nav ml-auto">
                            <li>
                                <a class="nav-link" href="">Bonjour {{ session.user.publicName }}</a>
                            </li>
                            <li>
                                <a class="nav-link" href="index.php?p=user/logout">Se déconnecter</a>
                            </li>
                        </ul>
                    {% else %}
                    {% endif %}
                </div>
            </nav>
        </header>
        <main>
        {% block content %}
        {% endblock %}
        </main>
        {% block footer %}
            <!-- Footer -->
            <footer class="bg-personnal text-center footer text-white mt-4 bottom-0">
                <!-- Grid container -->
                <div class="container ">
                    <!-- Section: Social media -->
                    <section class="d-flex justify-content-center  p-4 mb-1">
                    <!-- Left -->
                        <div class="me-5 d-none d-lg-block">
                        <span>Me suivre sur mes réseaux :</span>
                        </div>
                    <!-- Left -->  
                    <!-- Right -->
                        <div>
                        <a class="btn btn-outline-light btn-floating m-1" href="https://www.linkedin.com/in/fran%C3%A7ois-thialon-6969611ba/" role="button" target="_blank">
                        <i class="bi bi-linkedin"></i>
                        </a>
                        <a class="btn btn-outline-light btn-floating m-1" href="https://github.com/nosfairal" role="button" target="_blank">
                        <i class="bi bi-github"></i>
                        </a>
                        </div>
                        <!-- Right -->
                    </section>
                    <!-- Section: Social media -->

                    <!-- Section: Admin -->
                    <section class="mb-4">
                    <div class="row">
                        {% if session.user.userRole == "admin" or session.user.userRole == "moderator" %}
                            <div class="col-lg-3 col-md-6 mb-4 mb-md-0">
                                <a class="h5 {% if currentPage == "admin" %} active {% endif %}" href="./index.php?p=admin/index">Administration du site</a>
                            </div>
                            <div class="col-lg-3 col-md-6 mb-4 mb-md-0">
                                <a class="h5 {% if currentPage == "adminPosts" %} active {% endif %}" href="./index.php?p=admin/posts">Gérer les posts</a>
                            </div>
                            <div class="col-lg-3 col-md-6 mb-4 mb-md-0">
                                <a class="h5 {% if currentPage == "adminComments" %} active {% endif %}" href="./index.php?p=admin/comments">Gérer les commentaires</a>
                            </div>
                            <div class="col-lg-3 col-md-6 mb-4 mb-md-0">
                                <a class="h5 {% if currentPage == "adminUsers" %} active {% endif %}" href="./index.php?p=admin/users">Gérer les utilisateurs</a>
                            </div>
                        {% endif %}
                    </div>
                   
                    </section>
                    <!-- Section: Admin -->

                    <!-- Section: Links -->
                    <section class="">
                    <!--Grid row-->
                    <div class="row">
