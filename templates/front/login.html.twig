{% extends 'base.html.twig' %}
    {% block title %}Se connecter{% endblock %}
    {% block stylesheets %} 
    <link rel="stylesheet" href="./vendor/twbs/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.2/font/bootstrap-icons.css">
    <link rel="stylesheet" href="./public/css/style.css">
    {% endblock %}

    {% block content %}
        {% if session.erreur == "Vos identifiants sont incorrects" %}
            <div class="alert alert-danger alert-dismissible fade show" role="alert" auto-close="5000">
                <span>Vos identifiants sont incorrects</span>
            </div>
            {{ sessionStop }} 
        {% elseif session.erreur == "Vous devez être connecté pour accéder à cette page" %}
            <div class="alert alert-danger alert-dismissible fade show" role="alert" auto-close="5000">
                 <span>Vous devez être connecté pour accéder à cette page</span>
            </div>
            {{ sessionStop }} 
        {% endif %} 
        {% if session.message == "Merci et à bientôt" %}
            <div class="alert alert-success alert-dismissible fade show" role="alert" auto-close="5000">
                <span>Merci et à bientôt</span>
            </div>             
        {% endif %} 
        <div class="container">
            <h1 class="text-center">Formulaire de connection</h1>   
                {{ loginForm|raw }}
            <div class="text-center mt-4">
                <img src="./public/images/bienvenue.png" width="600px" high="600px" alt="Erreur 404">
            </div>
        </div>

    {% endblock %}


    {% block script %} 
        {{ parent() }}
        <script src="./public/javascript/loginAlert.js"></script>
    {% endblock %}