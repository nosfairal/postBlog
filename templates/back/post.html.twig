{% extends 'base.html.twig' %}
{% block stylesheets %}
<link href="./vendor/twbs/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet"/>
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.2/font/bootstrap-icons.css">
<link rel="stylesheet" href="./public/css/style.css"/>
{% endblock %} 
{% block content %}
    {% if post is defined %}
    {%  for attribute in post %}
     <span class="title"> Titre : {{ attribute.title }} </span></br>
     <span class="title"> Slug : {{ attribute.slug }} </span></br>
     <span class="title"> Intro : {{ attribute.intro }} </span></br>
     <span class="title"> Contenu : {{ attribute.content }} </span></br>
    
     
     {%  for field in commentStatus %}
     {% if attribute.postId == field.post %}
     <span class="title"> Commentaires de {{ field.author }} : {{ field.content }} </span></br>
     {% endif %}
     {% endfor %}
      {% endfor %}
     {{ addCommentForm|raw }}

    {% endif %}

    

{% endblock %}
