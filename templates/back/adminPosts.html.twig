{% extends 'base.html.twig' %}
{% block stylesheets %}
<link href="./vendor/twbs/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet"/>
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.2/font/bootstrap-icons.css">
<link rel="stylesheet" href="./public/css/style.css"/>
{% endblock %} 
{% block content %}
<h1 class="text-center mb-4">Gestion des posts</h1>
<a href="./index.php?p=post/add" class="text-decoration-none link-secondary">Ajouter un nouveau post <i class="bi bi-plus"></i></a>
<div class = "table-responsive">
    <table class="table table-striped ">
        <thead>
            <th>Id</th>
            <th>Titre</th>
            <th>Slug</th>
            <th>Introduction</th>
            <th>Contenu</th>
            <th>Auteur</th>
            <th>Date de r√©daction</th>
            <th>Actions</th>
        </thead>
        {%  for post in posts %}
            <tr>
                <td>{{ post.postId }}</td>
                <td>{{ post.title }}</td>
                <td>{{ post.slug }}</td>
                <td>{{ post.intro }}</td>
                <td>{{ post.content }}</td>
                <td>{{ post.author }}</td>
                <td>{{ post.creationDate }}</td>
                <td>
                    <a href="./index.php?p=post/update/{{ post.postId }}" class="btn btn-warning">Modifier</a>
                    <a href="./index.php?p=admin/deletePost/{{ post.postId }}" class="btn btn-danger">Supprimer</a>
                </td>
            </tr>
        {% endfor %}
    </table>
</div>
{% endblock %}